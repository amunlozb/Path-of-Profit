---
import ApexCharts from "apexcharts";
---

<div class="max-w-sm w-full rounded-lg">
    <div id="area-chart"></div>
</div>

<script>
    const options = {
        chart: {
            // Disable zoom
            zoom: false,
            height: "100%",
            maxWidth: "100%",
            type: "area",
            fontFamily: "Inter, sans-serif",
            dropShadow: {
                enabled: false,
            },
            toolbar: {
                show: false,
            },
        },
        tooltip: {
            enabled: false,
            x: {
                show: false,
            },
        },
        fill: {
            type: "gradient",
            gradient: {
                opacityFrom: 0.55,
                opacityTo: 0,
                shade: "#1C64F2",
                gradientToColors: ["#1C64F2"],
            },
        },
        dataLabels: {
            enabled: false,
        },
        stroke: {
            width: 6,
        },
        grid: {
            show: false,
            strokeDashArray: 4,
            padding: {
                left: 2,
                right: 2,
                top: 0,
            },
        },
        // Data
        series: [
            {
                data: [6500, 6418, 6456, 6526, 6448, 6456],
                color: "#1A56DB",
            },
        ],
        // Hide X Axis
        xaxis: {
            labels: {
                show: false,
            },
            axisBorder: {
                show: false,
            },
            axisTicks: {
                show: false,
            },
        },
        // Hide Y Axis
        yaxis: {
            show: false,
        },
    };

    if (
        document.getElementById("area-chart") &&
        typeof ApexCharts !== "undefined"
    ) {
        const chart = new ApexCharts(
            document.getElementById("area-chart"),
            options,
        );
        chart.render();
    }
</script>
